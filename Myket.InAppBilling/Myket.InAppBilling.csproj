        <UseMaui>true</UseMaui> <!-- این خط بسیار مهم است -->
        <SingleProject>true</SingleProject>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- تنظیمات پکیج -->
        <PackageId>Myket.InAppBilling</PackageId>
        <Version>1.0.0</Version>
        <Authors>Milad Xandi</Authors>
        <Description>Myket In-App Billing Library for .NET MAUI</Description>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Maui.Essentials" Version="8.0.100" />
    </ItemGroup>

</Project>